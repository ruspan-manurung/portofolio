<h1>Weekly Menu</h1>
<p>Select your meals for each week of the year:</p>

<!-- Tabbed Interface -->
<ul class="nav nav-tabs" id="menuTabs" role="tablist">
    @foreach (var month in menus.Keys)
    {
        <li class="nav-item" role="presentation">
            <button class="nav-link @((month == menus.Keys.First()) ? "active" : "")" id="@month-tab" data-bs-toggle="tab" data-bs-target="#@month" type="button" role="tab" aria-controls="@month" aria-selected="@((month == menus.Keys.First()) ? "true" : "false")">
                @month
            </button>
        </li>
    }
</ul>
<div class="tab-content mt-3" id="menuTabsContent">
    @foreach (var month in menus)
    {
        <div class="tab-pane fade @((month.Key == menus.Keys.First()) ? "show active" : "")" id="@month.Key" role="tabpanel" aria-labelledby="@month.Key-tab">
            <table class="table table-sm table-striped">
                <thead>
                    <tr>
                        <th>Week</th>
                        <th>Menu</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int week = 0; week < month.Value.GetLength(0); week++)
                    {
                        <tr>
                            <td>@month.Value[week, 0]</td>
                            <td>@month.Value[week, 1]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

