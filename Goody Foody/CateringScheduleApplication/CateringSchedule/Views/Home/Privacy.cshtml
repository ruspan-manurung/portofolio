@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>For request in authorization, try contact the admin. <br />
    Don't try anything funny!
    
</p>

<div class="row">
    <div class="col-md-6">
        <h3>Contact Form</h3>
        <form method="post" action="/Contact/Submit">
            <div class="mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Your Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" name="message" rows="4" placeholder="Write your message here" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Other Ways to Reach Us</h3>
        <ul class="list-unstyled">
            <li>
                <i class="bi bi-envelope"></i> Email: <a href="mailto:contact@yourwebsite.com">contact@yourwebsite.com</a>
            </li>
            <li>
                <i class="bi bi-telephone"></i> Phone: <span>+62 123 4567 890</span>
            </li>
            <li>
                <i class="bi bi-map"></i> Location: <span>Cikarang Barat, Indonesia</span>
            </li>
            <li>
                <i class="bi bi-facebook"></i> Facebook: <a href="https://www.facebook.com/yourprofile" target="_blank">facebook.com/yourprofile</a>
            </li>
            <li>
                <i class="bi bi-linkedin"></i> LinkedIn: <a href="https://www.linkedin.com/in/yourprofile" target="_blank">linkedin.com/in/yourprofile</a>
            </li>
        </ul>
        <div class="mt-4">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3958.726364019271!2d107.14492061533348!3d-6.331438295411973!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69931ddc7d1f03%3A0x4e7f4f5e6d64f720!2sCikarang%20Barat!5e0!3m2!1sen!2sid!4v1697489385203!5m2!1sen!2sid" 
                width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy">
            </iframe>
        </div>
    </div>
</div>

<hr class="my-4">

