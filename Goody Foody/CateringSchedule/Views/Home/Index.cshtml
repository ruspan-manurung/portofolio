@{
    ViewData["Title"] = "Home";
}

<div class="text-center my-5">
    <h1 class="display-4">🍴 Welcome to <span class="text-primary">Goody Foody Catering</span>!</h1>
    <p class="lead">
        Serving happiness on a plate, one meal at a time. Whether it’s a cozy family gathering or a grand celebration, we’ve got your catering needs covered!
    </p>
</div>

<div class="row">
    <div class="col-md-4 text-center">
        <i class="bi bi-heart-fill text-danger" style="font-size: 3rem;"></i>
        <h3>Delicious Meals</h3>
        <p>Our chefs craft mouthwatering dishes that delight every taste bud.</p>
    </div>
    <div class="col-md-4 text-center">
        <i class="bi bi-nutrition text-success" style="font-size: 3rem;"></i>
        <h3>Nutritious Options</h3>
        <p>Healthy and balanced meals to keep you energized and satisfied.</p>
    </div>
    <div class="col-md-4 text-center">
        <i class="bi bi-calendar-event text-primary" style="font-size: 3rem;"></i>
        <h3>Any Occasion</h3>
        <p>From birthdays to corporate events, we make every moment memorable.</p>
    </div>
</div>

<hr class="my-4">

<div class="text-center">
    <h2>Why Choose Goody Foody?</h2>
    <p class="mt-3">
        🌟 Fresh Ingredients | 🎉 Customized Menus | ⏰ Timely Delivery | ❤️ Exceptional Service
    </p>
    <a asp-controller="Home" asp-action="Menu" class="btn btn-primary btn-lg mt-4">Explore Our Menu</a>

</div>
